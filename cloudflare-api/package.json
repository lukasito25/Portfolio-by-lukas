{
  "name": "portfolio-api",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for portfolio database",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create portfolio-db",
    "d1:migrate": "wrangler d1 execute portfolio-db --file=migrations/schema.sql",
    "d1:seed": "wrangler d1 execute portfolio-db --file=migrations/seed.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.78.12"
  },
  "dependencies": {
    "hono": "^4.6.3",
    "bcryptjs": "^2.4.3"
  }
}
